{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    // 更加友好的代码提示
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    // "types": ["element-plus/global"]
  }
}
